{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"],
      "@modules/*": ["modules/*"],
      "@core/*": ["core/*"]
    },
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "rootDir": "./",
    "outDir": "build",
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "entryPoints": ["./src/server.ts"],
    "out": "docs"
  }
}
